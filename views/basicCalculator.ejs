<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Basic Calculator</title>
    <%- include('partials/cdnNstyles.ejs') %>
</head>

<body>
    <div class="flex flex-col items-center justify-center gap-3 h-screen w-screen bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-xl bg-opacity-10 overflow-hidden font-inria-sans slidedown">
        
        <div class="animate-slideup flex flex-col items-center justify-center gap-3 h-screen w-screen">

            <input id="firstValue"
                class="w-2/5 h-9 bg-gray-400 rounded-full bg-clip-padding backdrop-filter backdrop-blur-2xl bg-opacity-10 text-center text-white outline-none p-6 text-2xl placeholder:text-white"
                type="number" placeholder="0" />


            <input id="secondValue"
                class="w-2/5 h-9 bg-gray-400 rounded-full bg-clip-padding backdrop-filter backdrop-blur-3xl bg-opacity-10 text-center text-white outline-none p-6 text-2xl placeholder:text-white"
                type="number" placeholder="0" />

            <div class="flex items-center justify-center mt-12">
                <div class="text-white text-right border-r-2 border-white pr-5 w-screen">
                    <p>ADDITION</p>
                    <p>MULTIPLICATION</p>
                    <p>SUBTRACTION</p>
                    <p>DIVISION</p>
                    <p>AVERAGE</p>
                </div>
                
                <div class="text-white pl-5 w-screen">
                    <p id="addResult">0</p>
                    <p id="mulResult">0</p>
                    <p id="subResult">0</p>
                    <p id="divResult">0</p>
                    <p id="aveResult">0</p>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/closeBtn.ejs') %>
    <script defer src="/js/scripts.js"></script>
</body>

</html>
