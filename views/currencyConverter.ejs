<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currency Converter</title>
    <%- include('partials/cdnNstyles.ejs') %>       
</head>

<body class="flex flex-col items-center justify-center gap-3 h-screen bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-xl bg-opacity-10 overflow-hidden font-inria-sans text-white">
    <h1 class="text-3xl animate-slidedown">Currency Converter</h1>
    
    <div class="flex justify-center items-center h-[60px] w-2/5 animate-slideup">
        <select id="currency1" class="w-1/3 h-full rounded-s-full bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-2xl bg-opacity-10 text-white px-3 outline-none ">
            <option value="PHP" class="text-center" selected>PHP</option>
            <% currencies.forEach((currency) => { %>
                <option  class="text-center w-full h-full rounded-r-full bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-3xl bg-opacity-10  text-white outline-none p-6  text-2xl  dark:bg-gray-700 dark:border-gray-600 " value="<%= currency %>"><%= currency %></option>
                <% }); %>
            </select>
            <input
            id="amount1"
            class="w-full h-full rounded-r-full bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-3xl bg-opacity-10 text-white outline-none p-6 text-2xl placeholder:text-white"
            type="number" placeholder="0.00" />
        </div>
        
        <div class="flex justify-center items-center h-[60px] w-2/5 animate-slideup">
            <select id="currency2" class="w-1/3 h-full rounded-s-full bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-2xl bg-opacity-10 text-white px-3 outline-none text-center">
                <option value="USD" selected>USD</option>
                <% currencies.forEach((currency) => { %>
                    <option class="text-center w-full h-full rounded-r-full bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-3xl bg-opacity-10  text-white outline-none p-6  text-2xl  dark:bg-gray-700 dark:border-gray-600" value="<%= currency %>"><%= currency %></option>
                    <% }); %>
                </select>
                <input
                id="amount2"
                class="w-full h-full rounded-r-full bg-gray-400 bg-clip-padding backdrop-filter backdrop-blur-3xl bg-opacity-10 text-white outline-none p-6 text-2xl placeholder:text-white"
                type="number" placeholder="0.00" />
            </div>
            
            <div id="error-message" class="text-red-500 mt-4 hidden"></div>
            
            <%- include('partials/closeBtn.ejs') %>
            
            
            <script defer src="/js/scripts.js"></script>
        </body>
        
        </html>
